<div class="box2">
  <div class="box-inner">
    <h2>編集</h2>
    <%= form_with(model: @event, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

        <div class="box-time">
          <%= f.label :start_time, "予定開始日時" %><br />
          <%= f.datetime_field :start_time, min: Date.current %>
        </div>

        <div class="box-time">
          <%= f.label :end_time, "予定終了日時" %><br />
          <%= f.datetime_field :end_time, min: Date.current %>
        </div>

        <div class="box-title">
          <%= f.label :title, "タイトル" %><br />
          <%= f.text_field :title %>
        </div>

        <div class="box-text">
          <%= f.label :text, "内容" %><br />
          <%= f.text_area :text %>
        </div>

        <div class="box-submit">
          <%= f.submit "変更" %>
        </div>

    <% end %>
  </div>
</div>